{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Information",
      "Yarp.ReverseProxy": "Information",
      "System.Net.Http.HttpClient": "Information"
    }
  },
  "Jwt": {
    "Key": "ReplaceThisWithAStrongSecretKeyAtLeast32Chars!",
    "Issuer": "MyApp",
    "Audience": "MyAppUsers",
    "ExpiresMinutes": 120
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "backend",
        "Match": {
          "Path": "/api/auth-gateway/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ]
      },
      "product-route": {
        "ClusterId": "backend",
        "Match": {
          "Path": "/api/product-gateway/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/products/{**catch-all}"
          }
        ]
      },
      "category-route": {
        "ClusterId": "backend",
        "Match": {
          "Path": "/api/category-gateway/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/categories/{**catch-all}"
          }
        ]
      },
      "order-route": {
        "ClusterId": "backend",
        "Match": {
          "Path": "/api/order-product-gateway/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/orderProduct/{**catch-all}"
          }
        ]
      }
    },

    "Clusters": {
      "backend": {
      
        "Destinations": {
          "d1": {
            "Address": "http://localhost:5097/"
          }
        }
      }
    }
  }
}
